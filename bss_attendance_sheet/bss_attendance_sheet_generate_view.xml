<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_bss_attendance_sheet_generate_form" model="ir.ui.view">
			<field name="name">bss.attendance_sheet.generate.form</field>
			<field name="model">bss.attendance_sheet.generate</field>
			<field name="arch" type="xml">
	            <form string="Generate Attendance Sheet" version="7.0">
	                <group>
	                    <field name="date_start" />
	                    <field name="date_end" />
	                </group>
	                <footer>
	                    <button name="execute" string="Apply" type="object" class="oe_highlight"/>
	                    or
	                    <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>
	            </form>
			</field>
		</record>

		<record id="action_bss_attendance_sheet_generate" model="ir.actions.act_window">
			<field name="name">Generate Attendance Sheet</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">bss.attendance_sheet.generate</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="view_bss_attendance_sheet_generate_form" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<record id="bss_attendance_sheet_generate_todo" model="ir.actions.todo">
            <field name="action_id" ref="action_bss_attendance_sheet_generate"/>
            <field name="sequence">200</field>
            <field name="type">automatic</field>
        </record>

	</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

    <record model="ir.rule" id="visit_visibility_rule">
        <field name="name" >Visits According to User and Project</field>
        <field name="model_id" ref="model_bss_visit_report_visit"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('project_id.members','in', [user.id]),('project_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('bss_visit_report.group_visit_report_user'))]"/>
    </record>

    <record model="ir.rule" id="project_manager_all_visits_rule">
        <field name="name">Project Managers: all visits from all projects</field>
        <field name="model_id" ref="model_bss_visit_report_visit"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
    </record>
    
</data>
</openerp>

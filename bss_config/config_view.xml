<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_bss_config_form" model="ir.ui.view">
			<field name="name">bss.config.form</field>
			<field name="model">bss.config</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="base.res_config_view_base" />
			<field name="arch" type="xml">
				<data>
					<form position="attributes">
						<attribute name="string">Bluestar's extensions configuration</attribute>
					</form>
					
					<group string="res_config_contents" position="replace">
						<group id="bss_config_contents" />
	                </group>
				</data>
			</field>
		</record>

		<record id="action_bss_config" model="ir.actions.act_window">
			<field name="name">Bluestar's extensions configuration</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">bss.config</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="view_bss_config_form" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<record id="bss_config_todo" model="ir.actions.todo">
			<field name="action_id" ref="action_bss_config" />
			<field name="restart">always</field>
		</record>

	</data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_bss_partner_phonenumbers_config_form" model="ir.ui.view">
			<field name="name">bss.partner.phonenumbers.config.form</field>
			<field name="model">bss.partner.phonenumbers.config</field>
			<field name="inherit_id" ref="base.res_config_view_base" />
			<field name="arch" type="xml">
				<form position="attributes" version="7.0">
					<attribute name="string">Migrate Partner Phone Numbers</attribute>
				</form>
				
				<group string="res_config_contents" position="replace">
					<field name="country_id" />
                </group>
			</field>
		</record>

		<delete model="ir.ui.view" search="[('model','=','bss.partner.phonenumbers.failed')]" />
		<record id="view_bss_partner_phonenumbers_failed_tree" model="ir.ui.view">
			<field name="name">bss.partner.phonenumbers.failed.tree</field>
			<field name="model">bss.partner.phonenumbers.failed</field>
			<field name="arch" type="xml">
				<tree string="Failed Phone Numbers">
					<field name="partner_id" />
					<field name="phone" />
					<field name="mobile" />
					<field name="fax" />
				</tree>
			</field>
		</record>

		<record id="action_bss_partner_phonenumbers_config" model="ir.actions.act_window">
			<field name="name">Migrate Partner Phone Numbers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">bss.partner.phonenumbers.config</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="view_bss_partner_phonenumbers_config_form" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<record id="bss_partner_phonenumbers_config_todo" model="ir.actions.todo">
            <field name="action_id" ref="action_bss_partner_phonenumbers_config"/>
            <field name="sequence">200</field>
            <field name="type">automatic</field>
        </record>

	</data>
</openerp>

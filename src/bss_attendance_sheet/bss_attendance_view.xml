<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_hr_attendance_filter">
            <field name="name">bss.attendance.filter</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_hr_attendance_filter"/>
            <field name="arch" type="xml">
            	<filter string="My Attendance" position="replace">
            		<filter name="my_attendances" icon="terp-stock_align_left_24" string="My Attendance" domain="[('employee_id.user_id.id', '=', uid)]" />
            	</filter>
            </field>
        </record>

        <record id="view_attendance_form" model="ir.ui.view">
            <field name="name">bss.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_form"/>
            <field name="arch" type="xml">
                <field name="action" position="before">
                	<field name="type" />
                </field>
            </field>
        </record>

        <record id="view_attendance_tree" model="ir.ui.view">
            <field name="name">bss.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <field name="action" position="before">
                	<field name="is_vector_phone" widget="device_type" />
                	<field name="type" />
                </field>
            </field>
        </record>
        
        <record id="view_attendance_who" model="ir.ui.view">
            <field name="name">bss.attendance.who.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_who"/>
            <field name="arch" type="xml">
                <field name="action" position="before">
                    <field name="is_vector_phone" widget="device_type" />
                    <field name="type"/>
                </field>
            </field>
        </record>
        
        <record id="hr_attendance.open_view_attendance" model="ir.actions.act_window">
            <field name="name">Attendances</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_today":1, "search_default_my_attendances":1}</field>
            <field name="search_view_id" ref="hr_attendance.view_hr_attendance_filter" />
            <field name="help">The Time Tracking functionality aims to manage employee attendances from Sign in/Sign out actions. You can also link this feature to an attendance device using OpenERP's web service features.</field>
        </record>


    </data>
</openerp>



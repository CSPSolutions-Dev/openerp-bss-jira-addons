<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="attendance_wizard_form" model="ir.ui.view">
            <field name="name">attendance.wizard.form</field>
            <field name="model">attendance.wizard</field>
            <field name="arch" type="xml">
                <form string="" version="7.0">
                    <group>
                        <field name="employee_id"/>
                        <field name="type"/>
	                    <field name="date_from"/>
	                    <field name="date_to"/>
                    </group>
                    <footer>
                        <button name="execute" string="Save" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>

        <record id="action_attendance_wizard" model="ir.actions.act_window">
            <field name="name">New Event</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attendance.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="attendance_wizard_form"/>
            <field name="target">new</field>
        </record>
        
        <menuitem action="action_attendance_wizard" id="menu_open_view_attendance_wizard" parent="hr_attendance.menu_hr_attendance" 
        		sequence="30" groups="base.group_hr_attendance"/>

    </data>
</openerp>

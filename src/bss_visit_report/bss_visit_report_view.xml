<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Top menu item -->
		<menuitem name="Visit Report" id="bss_visit_report.menu_visit_report"
			parent="base.menu_main_pm" sequence="4" />
		
		<!-- Configuration menu item -->
        <menuitem
            name="Visits" 
            id="menu_visit_configuration" 
            parent="base.menu_definitions" sequence="1" />

        <record id="view_task_search_form" model="ir.ui.view">
            <field name="name">project.task.search.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form" />
            <field name="arch" type="xml">
               <search string="Tasks">
               		<filter position="after" name="default_filter" domain="['|',('state','=','open'),'&amp;',('state','=','done'),('date_end','>=',(context_today()-datetime.timedelta(days=(7))).strftime('%%Y-%%m-%%d'))]" string="Open and recently closed" />
                </search>
            </field>
        </record>
        
        <record id="action_view_task" model="ir.actions.act_window">
            <field name="name">Tasks</field>
            <field name="res_model">project.task</field>
            <field name="inherit_id" ref="project.action_view_task" />
            <field name="search_view_id" ref="view_task_search_form" />
            <field name="view_mode">kanban,tree,form,calendar,gantt,graph</field>
            <field name="context">{'search_default_default_filter': 1}</field>
        </record>
        
        <menuitem action="action_view_task" id="project.menu_action_view_task" parent="project.menu_project_management" sequence="5"/>

	</data>
</openerp>